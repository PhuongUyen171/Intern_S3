<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="../../Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/cssMain.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/c37e58ae3b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
</head>

<body>
    <div class="header">
        <ul>
            <li><a href="@Url.Action("TuyenDung","Home")">TUYỂN DỤNG</a></li>
            <li><a href="@Url.Action("GioiThieu","Home")">VỀ MOJI</a></li>
            <li><a href="@Url.Action("HeThong","Home")">HỆ THỐNG CỬA HÀNG</a></li>
        </ul>
    </div>

    <div class="container-fluid">
        <div class="row header2">
            <div class="col-lg-1 col-sm-1"></div>
            <div class="col-lg-2 col-sm-3">
                <a href="@Url.Action("Index","Home")">
                    <img src="../../Content/Image/store_1580801513_542.png" height="50" width="100" style="margin-top:10px" />
                </a>
            </div>
            <div class="col-lg-5 col-sm-5">
                @Html.Action("SearchPartial", "Home")
            </div>
            <div class="col-lg-4" style="padding-top:35px; padding-right:50px;">
                @Html.Action("UserPartial", "User")
            </div>
        </div>
    </div>
    @Html.Action("CategoryPartial", "Home")
    <div class="row">
        <div class="col-lg-7 col-sm-12">
            <div id="myCarousel" class="carousel slide border" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/Image/tin3.jpg" alt="Leopard">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/Image/tin4.jpg" alt="Cat">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/Image/baner1.jpg" alt="Lion">
                    </div>
                </div>
                <!-- Controls -->
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-5">
            <img src="../../Content/Image/sb_1581309958_255.jpg" style="padding-bottom:20px" />
            <img src="../../Content/Image/sb_1582684376_29.png" />
        </div>
        @{Html.RenderAction("CartPartial", "Cart");}
    </div>
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">@RenderBody()</div>
        <div class="col-lg-1"></div>
    </div>
    <div class="footer" style="font-size:14px">
        <div class="row" style="padding-top:10px">
            <div class="col-lg-1"></div>
            <div class="col-lg-2">
                <ul>
                    <li>Hotline: 0917.3200.31</li>
                    <li>Email: uyen@gmail.com</li>
                    <li><a href="../Home/ChinhSachBanHang">Chính sách mua hàng</a></li>
                    <li><a href="../Home/HuongDanMuaHang">Hướng dẫn mua hàng</a></li>
                </ul>
            </div>
            <div class="col-lg-3">
                <ul>
                    Chi nhánh TP.HCM
                    <li>17 Lê Trọng Tấn</li>
                    <li>22 Lê Thúc Hoạch</li>
                    <li>37 Lê Lợi</li>
                    <li>43 Lê Thị Dần</li>
                    <li>51 Lê Thị Riêng</li>
                </ul>
            </div>
            <div class="col-lg-3">
                <ul>
                    Chi nhánh Hà Nội
                    <li>61 Nguyễn Thị Thập</li>
                    <li>73 Nguyễn Huệ</li>
                    <li>87 Nguyễn Văn Quá</li>
                    <li>97 Nguyễn Thị Minh Khai</li>
                    <li>101 Nguyễn Trãi</li>
                    <li>123 Nguyễn Ái Quốc</li>
                </ul>
            </div>
            <div class="col-lg-2">
                <a href="~/Admin/Login/Login">
                    <img src="../../Content/Image/store_1580801513_542.png" width="100%" />
                </a>
                <p>Hãy kết nối với chúng mình.</p>
            </div>
            <div class="col-lg-1"></div>
        </div>
    </div>
    <div class="footerEnd">
        Copyright 2020. Made by Uyên PU
    </div>
</body>
</html>
<style>
    .carousel-indicators li {
        width: 10px;
        height: 10px;
        border-radius: 100%;
    }
</style>
<script>
    $('#myCarousel').carousel({
        interval: 3000
    });
</script>

