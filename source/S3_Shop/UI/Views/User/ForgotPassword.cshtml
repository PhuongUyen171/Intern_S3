@model UI.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutIntroduce.cshtml";
}
<link href="../../Content/cssMain.css" rel="stylesheet" />
<link href="../../Content/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row" style="min-height:500px;">
        <div class="col-lg-3 col-sm-2 col-md-1 col-xs-1"></div>
        <div class="col-lg-6 col-sm-8 col-md-10 col-xs-10">
            <h2 style="color:#ffb0bd;text-align:center">QUÊN MẬT KHẨU</h2>
            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Nhập địa chỉ email", @class = "txt" })
            <button type="submit" class="btn btn-login">XÁC NHẬN</button>
            <div class="warning">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })<br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
            </div>
        </div>
        <div class="col-lg-3 col-sm-2 col-md-1 col-xs-1"></div>
    </div>
}
<style>
    .txt {
        width: 100%;
        height: 40px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btn-login {
        background-color: #ffb0bd;
        color: white;
        width: 100%;
        height: 50px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .warning {
        text-align: left;
    }

        .warning ul {
            list-style: none;
            margin-left: -40px;
        }
</style>
