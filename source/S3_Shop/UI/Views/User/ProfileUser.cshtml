@model Model.CustomerModel

@{
    ViewBag.Title = "Profile cá nhân";
    Layout = "~/Views/Shared/_LayoutIntroduce.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="row" style="padding-top:50px;">
    <div class="col-md-3 col-sm-10" style="border: 1px solid black;margin:10px;">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3" style="margin-top:20px;"><img src="~/Content/Image/cat.jpg" style="height:100px; width:100px;border-radius:50px;" align="middle" /></div>
            <div class="col-md-3"></div>
        </div>

        <h2>@Model.CustomName</h2>
        <ul style="list-style:none;">
            <li>@Html.ActionLink("Thông tin tài khoản","ProfileUser",new { usr = Model.Username }) </li>
            <li>Lịch sử đơn hàng</li>
            <li>@Html.ActionLink("Đổi mật khẩu", "ResetPassword", new { id = Model.CustomID, mail = Model.Email })</li>
            <li>Sản phẩm yêu thích</li>
            <li>@Html.ActionLink("Đăng xuất","Logout")</li>
        </ul>
    </div>
    <div class="col-md-8 col-sm-10" style="border: 1px solid black;margin:10px;">
        <h2 style="color:#ffb0bd;font-size:25px;margin-top:20px;padding-bottom:10px;border-bottom:1px solid #ffb0bd">HỒ SƠ CỦA TÔI</h2>
        <p style="text-align:left">Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
        @using (Html.BeginForm("ProfileUser", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(Model => Model.CustomID)
            @Html.HiddenFor(Model => Model.MemID)
            @Html.HiddenFor(Model => Model.Pass)
            @Html.HiddenFor(Model=>Model.Username)
            @Html.HiddenFor(Model=>Model.Statu)
            @Html.HiddenFor(Model => Model.TotalPrice)
            <table>
                <tr>Họ tên: </tr>
                <tr>@Html.TextBoxFor(Model => Model.CustomName, new { @class = "txt" })</tr>
                <tr>Email:</tr>
                <tr>@Html.TextBoxFor(Model => Model.Email, new { @class = "txt" })</tr>
                <tr>Địa chỉ:</tr>
                <tr>@Html.TextBoxFor(Model => Model.Location, new { @class = "txt" })</tr>
                <tr>Điện thoại:</tr>
                <tr>@Html.TextBoxFor(Model => Model.Phone, new { @class = "txt" })</tr>
                <tr><button type="submit" class="btn btn-login">CẬP NHẬT THÔNG TIN</button></tr>
                <tr class="warning">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
                    <font style="color:#7c1b1b">@ViewBag.Result</font>
                </tr>
            </table>
        }
    </div>
</div>
<style>
    h2 {
        font-size: 16px;
        font-weight: bold;
    }

    .txt {
        width: 100%;
        height: 40px;
        border-radius: 10px;
        padding: 10px;
    }
    table tr{
        margin-top:10px;
    }
    .btn-login {
        background-color: #ffb0bd;
        color: white;
        width: 100%;
        height: 50px;
        border-radius: 10px;
        margin-bottom: 40px;
        margin-top:20px;
    }
    .warning {
        text-align: left;
    }

        .warning ul {
            list-style: none;
            margin-left: -40px;
        }
</style>
