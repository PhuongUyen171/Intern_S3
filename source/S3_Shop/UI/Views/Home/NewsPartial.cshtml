@model IEnumerable<Model.NewsModel>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/cssMain.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<link href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>


<div class="row" style="margin-bottom:30px">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-sm-4 tinTuc">
            <img src="../../Content/Image/@item.Images" width="100%" />
            <div class="txt">
                <h3><a href="@Url.Action("GetDetailNews","Home", new { id= item.NewsID})">@item.Title</a></h3>
                <p>Whatever It Is - Always Awesome</p>
            </div>
        </div>
    }
</div>
<style>
    .tinTuc {
        position: relative;
        overflow: hidden;
    }

        .tinTuc .txt {
            width: 100%;
            height: 100%;
            background-color: white;
            position: absolute;
            bottom: 50px;
            text-align: center;
            color: black;
            padding: 10px;
            box-sizing: border-box;
            opacity: 0;
            text-align: center;
        }

        .tinTuc:hover .txt {
            opacity: 0.5;
            transform: translateY(50px);
            transition: ease-in-out 0.5s;
        }

        .tinTuc:hover img {
            transform: scale(1.0);
            transition: all ease-in-out 0.5s;
            opacity: 0.5;
        }
        .txt h3 a{
            color:black;
        }
        .txt h3 a:hover {
            color: #ffb0bd;
            text-decoration:none;
        }
</style>
