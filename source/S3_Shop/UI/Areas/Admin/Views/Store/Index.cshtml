@model IEnumerable<Model.StoreModel>

@{
    ViewBag.Title = "Quản lý cửa hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>QUẢN LÝ CỬA HÀNG</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr style="background-color:darkgrey;">
        <th>
            @Html.DisplayNameFor(model => model.StoreID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StoreID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            <button class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = item.StoreID }, new { @style = "color:white;" }) </button>
            <button class="btn btn-success">@Html.ActionLink("Details", "DetailStore", new { id = item.StoreID }, new { @style = "color:white;" })</button>
            <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.StoreID }, new { @style = "color:white;" })</button>
        </td>
    </tr>
}

</table>
