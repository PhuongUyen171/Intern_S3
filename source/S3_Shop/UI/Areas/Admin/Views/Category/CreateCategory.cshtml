@model Model.CategoryModel
@{
    ViewBag.Title = "Tạo mới danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TẠO MỚI DANH MỤC</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
